[
    {
        "id": "article_create_params",
        "$schema": "http://json-schema.org/draft-04/schema#",
        "description": "schema create article",
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "maxLength": 100,
                "pattern": "^[a-zA-Z0-9, \/:!?&%()-]+$"
            },
            "summary": {
                "type": "string",
                "maxLength": 250,
                "pattern": "^[a-zA-Z0-9, \/:;.@#!?&$*%'+=\"()-]+$"
            },
            "description": {
                "type": "string"
            },
            "image": {
                "type": "string",
                "maxLength": 150
            }
        },
        "required": ["title", "summary"]
    },
    {
        "id": "article_get_params",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "description": "schema get article",
        "type": "object",
        "properties": {
            "q": {
                "type": "string",
                "maxLength": 100
            },
            "sortBy": {
                "type": "string",
                "enum": ["asc", "desc"]
            },
            "orderBy": {
                "type": "string",
                "enum": ["id", "title", "created"]
            },
            "limit": {
                "type": "string",
                "pattern": "^[0-9]+$"
            },
            "page": {
                "type": "string",
                "pattern": "^[0-9]+$"
            }
        }
    }
]